<div class="container my-3">

  <div class="d-flex justify-content-between">
    <div class="card-profile p-5 flex-grow-1  text-center">
      <% if current_user.avatar.present? %>
        <%= cl_image_tag current_user.avatar.key, class: "avatar-large mb-2" %>
      <% else %>
      <%= image_tag "sparrow", class: "avatar-large mb-2"%>
      <% end %>
      <h4><%= current_user.first_name %> <%= current_user.last_name %></h4>
      <%= link_to "Add a boat for rental", new_boat_path, class: "btn btn-primary" %>
      <%= link_to "Edit profile", edit_user_registration_path, class: "btn btn-primary" %>
      <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "btn btn-primary" %>

    </div>
    <div class="col-9 ml-3 cards-booking">
      <div class="text-center">
      <h1><i class="fa-solid fa-dharmachakra"></i> Dashboard</h2>
      </div>
      <%= render "bookings/show"%>
      <%= render "boats/owner_boats"%>
    </div>
  </div>
</div>
