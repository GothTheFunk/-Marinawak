<h1>Boats#new</h1>

<%= simple_form_for (@boat) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :category %>
    <%= f.input :capacity %>
    <%= f.input :description %>
    <%= f.input :price_per_day %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Create boat" %>
  </div>
<% end %>
