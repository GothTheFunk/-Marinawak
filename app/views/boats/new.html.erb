<div class="container my-3">
  <h1>⚓️ Add your boat to Marinawak's fleet</h1>

  <%= simple_form_for (@boat) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :category %>
      <%= f.input :capacity %>
      <%= f.input :description %>
      <%= f.input :price_per_day %>
      <%= f.input :photos, as: :file, input_html: { multiple: true } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Create boat", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
