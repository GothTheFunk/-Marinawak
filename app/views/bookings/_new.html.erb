<h3>Request rental of this boat</h3>

<%= simple_form_for([@boat, @booking]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :start_date %>
    <%= f.input :end_date %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, "Send request", class: "btn btn-secondary"%>
  </div>
<% end %>
