<div class="mt-3">
<h3>Request rental of this boat</h3>
<%= simple_form_for [@boat, @booking], data: { controller: 'flatpickr' } do |f| %>
            <%= f.error_notification %>
            <div class="d-flex">
            <div class="mb-3 me-3 string optional booking_start_date"><label class="form-label string optional" for="booking_start_date">Start date</label><input class="datepicker form-control me-2 optional string" type="text" name="booking[start_date]" id="booking_start_date"></div>
            <%#= f.input :start_date, as: :string, required: false, input_html: {class: "datepicker me-2"} %>
            <%= f.input :end_date, as: :string, required: false, input_html: {class: "datepicker"} %>
            </div>

            <% if user_signed_in? %>
              <%= f.submit 'Book Boat', class: 'btn btn-primary' %>
            <% else %>
              <%= f.submit 'Book Boat', class: 'disabled btn' %>
            <% end %>
          <% end %>
</div>
