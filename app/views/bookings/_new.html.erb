<div class="mt-3">
<h3>Request rental of this boat</h3>

<%= simple_form_for [@boat, @booking], data: { controller: 'flatpickr' } do |f| %>
            <%= f.error_notification %>
            <%= f.input :start_date, as: :string, required: false, input_html: {class: "datepicker"} %>
            <%= f.input :end_date, as: :string, required: false, input_html: {class: "datepicker"} %>
            <% if user_signed_in? %>
              <%= f.submit 'Book Gear', class: 'btn btn-primary' %>
            <% else %>
              <%= f.submit 'Book Gear', class: 'disabled btn' %>
            <% end %>
          <% end %>
</div>
